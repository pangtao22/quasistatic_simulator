<?xml version="1.0"?>
<sdf version="1.7">

  <!-- Note:
       This file defines the model for a box with two degrees of freedom
       (DOFs): a) one DOF for the horizontal motion along the y axis and
       b) one DOF for the vertical motion along the z axis.
       To this end, this model defines a small "ghost body" between
       the box and the world so that we can attach two prismatic joints for
       these two DOFs. The ghost body has negligible mass.
  -->
  <!-- world->ghost_body_y->ghost_body_z_sphere-->
  <model name="simple_cuboid_0.5m">
    <!-- The model for a solid box of uniform density. -->
    <link name="ghost_body_y">
      <inertial>
        <mass>1.0e-6</mass>
        <inertia>
          <ixx>1.0e-6</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1.0e-6</iyy>
          <iyz>0</iyz>
          <izz>1.0e-6</izz>
        </inertia>
      </inertial>
    </link>

    <link name="ghost_body_z">
      <inertial>
        <mass>1.0e-6</mass>
        <inertia>
          <ixx>1.0e-6</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1.0e-6</iyy>
          <iyz>0</iyz>
          <izz>1.0e-6</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="y_slider" type="prismatic">
      <parent>world</parent>
      <child>ghost_body_y</child>
      <axis>
        <xyz>0 1 0</xyz>
        <!-- Drake attaches an actuator to all joints with a non-zero effort
             limit. We do not want an actuator for this joint. -->
        <limit>
          <effort>0</effort>
        </limit>
      </axis>
    </joint>

    <joint name="z_slider" type="prismatic">
      <parent>ghost_body_y</parent>
      <child>ghost_body_z</child>
      <axis>
        <xyz>0 0 1</xyz>
        <!-- Drake attaches an actuator to all joints with a non-zero effort
             limit. We do not want an actuator for this joint and therefore we
             set a zero effort limit. -->
        <limit>
          <effort>0</effort>
        </limit>
      </axis>
    </joint>

    <joint name="rotation" type="revolute">
      <parent>ghost_body_z</parent>
      <child>box</child>
      <axis>
        <xyz>1 0 0</xyz>
        <!-- Drake attaches an actuator to all joints with a non-zero effort
             limit. We do not want an actuator for this joint and therefore we
             set a zero effort limit. -->
        <limit>
          <effort>0</effort>
        </limit>
      </axis>
    </joint>

    <link name="box">
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.0166666666666667</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0166666666666667</iyy>
          <iyz>0</iyz>
          <izz>0.0166666666666667</izz>
        </inertia>
      </inertial>

      <visual name="box_visual">
        <geometry>
          <box>
            <size>0.499 0.499 0.499</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.9 0.9 0.9 0.9</diffuse>
        </material>
      </visual>

      <collision name="collision">
        <geometry>
          <box>
            <size>0.499 0.499 0.499</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.1</mu>
              <mu2>0.1</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <collision name="minus_x_lower_left_corner">
        <pose> -0.25 -0.25 -0.25 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="minus_x_lower_right_corner">
        <pose> -0.25 0.25 -0.25 0 0 0 </pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="plus_x_lower_left_corner">
        <pose> 0.25 -0.25 -0.25 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="plus_x_lower_right_corner">
        <pose> 0.25 0.25 -0.25 0 0 0 </pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="minus_x_upper_left_corner">
        <pose> -0.25 -0.25 0.25 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="minus_x_upper_right_corner">
        <pose> -0.25 0.25 0.25 0 0 0 </pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="plus_x_upper_left_corner">
        <pose> 0.25 -0.25 0.25 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

      <collision name="plus_x_upper_right_corner">
        <pose> 0.25 0.25 0.25 0 0 0 </pose>
        <geometry>
          <sphere>
            <radius>1e-7</radius>
          </sphere>
        </geometry>
      </collision>

    </link>
  </model>
</sdf>